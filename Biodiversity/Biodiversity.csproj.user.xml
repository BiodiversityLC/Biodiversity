<Project>
    <!-- Custom Variables -->
    <PropertyGroup>
        <PluginDirectory>C:\Program Files (x86)\Steam\steamapps\common\Lethal Company\BepInEx\plugins\</PluginDirectory>
    </PropertyGroup>

    <!-- Copy to Plugin Directory for Quicker Testing -->
    <Target Name="CopyFiles" AfterTargets="NetcodePatch">
	    <Message Importance="high" Text="Copying to local lethal company install" />
        <Copy SourceFiles="$(TargetPath)" DestinationFolder="$(PluginDirectory)"/>
    </Target>
    
    <Target Name="LaunchGame" AfterTargets="CopyFiles" Condition=" '$(Configuration)' == 'Debug' ">
        <Exec Command='taskkill /f /fi "pid gt 0" /im xdesproc.exe'/>
        <Exec Command='start cmd /k "C:\Program Files (x86)\Steam\steamapps\common\Lethal Company\Lethal Company.exe"'/>
    </Target>
</Project>